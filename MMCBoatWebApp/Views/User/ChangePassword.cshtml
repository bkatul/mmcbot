@model MMCBoatWebApp.Models.UserModel
@{
    ViewData["Title"] = "Reset Password";
}



<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/images/img-01.png" alt="IMG">
            </div>

            <form asp-action="Forgot Password" class="login100-form validate-form">
                <span class="login100-form-title">
                    Set Password
                </span>

                <div class="wrap-input100 validate-input" data-validate="New password is required">
                    @*<label asp-for="Password" class="control-label"></label>*@
                    <input asp-for="Password" class="input100" placeholder="New password"/>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    @*<label asp-for="Username" class="control-label"></label>*@
                </div>

                <div class="wrap-input100 validate-input" data-validate="Confirm password is required">
                    @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                    @*<label asp-for="ConfirmPassword" class="control-label"></label>*@
                    <input asp-for="ConfirmPassword" class="input100" type="password" placeholder="Confirm password"/>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="container-login100-form-btn" data-tilt>
                    <input type="submit" value="Submit" class="login100-form-btn" />
                    @Html.ValidationMessage("Error")
                </div>
                <div class="text-center p-t-12">
                    @*<span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>*@
                </div>
                <div class="text-center p-t-136">
                    @*<a class="txt2" href="/login">
                        Skip
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>*@
                </div>
            </form>
        </div>
    </div>
</div>




