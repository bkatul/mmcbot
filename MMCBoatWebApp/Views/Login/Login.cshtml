@model MMCBoatWebApp.Models.LoginModel
@{
    ViewData["Title"] = "Log In";
}


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="/images/img-01.png" alt="IMG">
            </div>

            <form asp-action="Login" class="login100-form validate-form">
                <span class="login100-form-title">
                    Log In 2
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email address is required: ex@abc.xyz">
                    <input asp-for="EmailId" class="input100" type="text" placeholder="Email Address" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                    @*<span asp-validation-for="Username" class="text-danger"></span>*@
                    @*<label asp-for="Username" class="control-label"></label>*@
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                    <input asp-for="Password" class="input100" type="password" placeholder="Password" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>

                <div class="container-login100-form-btn" data-tilt>
                    <input type="submit" value="Log In" class="login100-form-btn" />
                   
                </div>
                <div class="text-center p-t-12">
                    <span style="margin-top:12px">
                        @Html.ValidationMessage("Error")
                    </span>
                    @*<span class="txt1">
            Forgot
        </span>
        <a class="txt2" href="#">
            Username / Password?
        </a>*@
                </div>
                <div class="text-center p-t-136">
                    @*<a class="txt2" href="#">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>*@
                </div>
            </form>
        </div>
    </div>
</div>


